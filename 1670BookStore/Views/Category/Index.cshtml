@model List<Category>

<div class="container">
    <div class="p-2 pt-md-5 pb-md-3 mx-auto">
        <h1 class="display-4">Category Management</h1>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th colspan="5">Category List</th>
                <th>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add</a>
                </th>
            </tr>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CatId</td>
                    <td>@category.CatName</td>
                    <td>@category.CatDescription</td>
                    <td>
                        <a type="button" class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-success btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
